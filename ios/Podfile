# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

flutter_application_path = File.expand_path('..', __dir__)

# Skip podhelper.rb since you are using GitHub Actions and no mac locally
# Normally this would be:
# require File.join(flutter_application_path, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
# flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Standard Flutter dependencies
  pod 'Flutter', :path => File.join(flutter_application_path, '.ios', 'Flutter', 'engine')
  pod 'FirebaseCore'  # example extra pod if you need it

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end