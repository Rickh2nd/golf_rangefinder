name: iOS Build

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    name: Build iOS App
    runs-on: macos-13

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.29.2'

      - name: Install Flutter dependencies
        run: flutter pub get

      - name: Create .netrc for Mapbox authentication
        run: |
          echo "machine api.mapbox.com" > ~/.netrc
          echo "login mapbox" >> ~/.netrc
          echo "password ${{ secrets.MAPBOX_DOWNLOAD_TOKEN }}" >> ~/.netrc
          chmod 600 ~/.netrc

      - name: Install CocoaPods dependencies (with retry)
        run: |
          cd ios
          for i in 1 2 3; do
            pod install && break || sleep 10
          done

      - name: Build iOS app
        run: flutter build ios --release --no-codesign