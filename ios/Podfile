# Minimum platform version
platform :ios, '12.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# CocoaPods sources (CDN first, fallback to GitHub)
source 'https://cdn.cocoapods.org/'
source 'https://github.com/CocoaPods/Specs.git'

# Set the Flutter application path
flutter_application_path = File.expand_path('..', __dir__)
podhelper_path = File.join(flutter_application_path, 'packages', 'flutter_tools', 'bin', 'podhelper')

# Load flutter podhelper if available
if File.exist?(podhelper_path + ".rb")
  require podhelper_path
else
  puts "⚠️  Warning: podhelper.rb not found, skipping flutter_ios_podfile_setup"
end

# CocoaPods project setup
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Install Flutter dependencies
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Post-install script to finalize build settings
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end